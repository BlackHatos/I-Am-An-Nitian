<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="#ffffff">






    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/coverpic"
        android:layout_marginTop="-190dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/circlepic"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:elevation="21dp"
        android:background="@android:color/transparent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="140dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Shikhar Srivastava"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginTop="45dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/university"
            android:layout_marginTop="96dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. B.R. Ambedkar National Institute of Technology, Jalandhar , Punjab"
            android:layout_marginTop="96dp"

            android:layout_marginLeft="70dp"
            android:textSize="20dp"/>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="350dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTech. , Instrumentation and \nControl  Engineering, 1st Year"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nitlogo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:layout_marginTop="450dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Developer,Web Developer"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/abouticon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="550dp"
        app:cardElevation="22dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:background="@drawable/mybutton2"
            android:text="Connect"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_insta"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="45dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/linkedin"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="165dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_fb"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="285dp"/>
    </androidx.cardview.widget.CardView>



</RelativeLayout>
