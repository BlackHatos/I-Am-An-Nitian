<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:id="@+id/clickStory"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/storyImage"
                    android:scaleType="centerCrop"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/amir"
                    />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/storyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/work_sans_semibold"
                    android:textColor="@color/textColor1"
                    android:text="This is news heading for demonstration"
                    />

                <TextView
                    android:id="@+id/storyDescp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/work_sans"
                    android:textSize="15sp"
                    android:textColor="@color/textColor1"
                    android:layout_below="@id/storyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum is a dummy text to test something"
                    />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>