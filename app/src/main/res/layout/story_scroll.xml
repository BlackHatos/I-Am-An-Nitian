<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cardView"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/storyImage"
                    android:scaleType="centerCrop"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/nitsri_photo"
                    />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:paddingStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="6dp"
                    android:id="@+id/storyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:maxLines="3"
                    android:fontFamily="@font/work_sans_semibold"
                    android:textColor="@color/textColor1"
                    android:text="This is news heading for
                    demonstration. Lorem ipsum is a dummy text to be utilized by
                    some one in the vain of the success
                     hence i just can't move like this"
                    />

                <RelativeLayout
                    android:layout_marginBottom="6dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans"
                        android:text="10 hours ago"
                        android:textColor="@color/textColor4"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_marginEnd="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/work_sans"
                        android:text="30 views"
                        android:textColor="@color/textColor4"
                        android:textSize="12sp" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>