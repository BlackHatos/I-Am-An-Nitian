<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".NotificationActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_margin="0dp"
        android:elevation="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:titleMarginStart="6dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/elevationShadow"
        app:layout_anchorGravity="bottom"
        android:layout_below="@id/toolbar"
        android:id="@+id/view"
        app:layout_anchor="@id/toolbar"
        />

    <LinearLayout
        android:paddingStart="30dp"
        android:paddingEnd="50dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notification"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="25dp"
                    android:src="@drawable/amir"
                    android:layout_height="25dp"/>

                <TextView
                    android:fontFamily="@font/work_sans_semibold"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/textColor4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News for you"
                    />

            </LinearLayout>

            <TextView
                  android:textSize="16sp"
                android:fontFamily="@font/roboto"
                  android:textColor="@color/textColor1"
                  android:layout_marginTop="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="This is a test notification
please don't mind. Lorem ipsum is a dummy text so please hiut read it"
                  />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/elevationShadow"
        />

</LinearLayout>