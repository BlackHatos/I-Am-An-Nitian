                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:text="xyz4343@gmail.com"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="64dp"/>


