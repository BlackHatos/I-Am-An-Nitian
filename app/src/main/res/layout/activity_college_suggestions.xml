<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    tools:context=".CollegeSuggestions">

    <com.google.android.material.appbar.AppBarLayout
        android:background="?attr/backgroundColor"
        app:elevation="5dp"
        android:elevation="10dp"
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <androidx.appcompat.widget.Toolbar
            android:elevation="10dp"
            android:layout_margin="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStartWithNavigation="0dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundColor"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:dropDownHeight="wrap_content"
                    android:popupBackground="@null"
                    android:popupElevation="0dp"
                    android:dropDownSelector="?attr/backgroundColor"
                    android:background="@drawable/auto_complete_edittext_college"
                    android:dropDownAnchor="@id/appBarLayout"
                    android:dropDownWidth="match_parent"
                    android:inputType="textAutoComplete|textAutoCorrect"
                    android:paddingEnd="10dp"
                    android:textColorHint="?attr/hintColor"
                    android:textColor="?attr/textColor"
                    android:id="@+id/collegeautoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="College Name"
                    android:completionThreshold="1"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/navigationHorizontalLineColor"
            />
    </com.google.android.material.appbar.AppBarLayout>

</LinearLayout>