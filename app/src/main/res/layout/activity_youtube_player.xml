<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".YoutubePlayer">

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.google.android.youtube.player.YouTubePlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


    <LinearLayout
        android:id="@+id/head1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head2"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/cnt_desp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/headline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/work_sans_semibold"
            android:text="Useful Links"
            android:textColor="?attr/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/fourthRelativeLayout"
        android:layout_below="@id/head4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >

        <LinearLayout
            android:id="@+id/layout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dp">


            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/fourth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:tint="#46000000"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:id="@+id/video1"
                        />

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_play_circle_filled_black_24dp"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title1"
                android:textSize="14sp"
                android:textColor="?attr/textColor"
                android:layout_marginTop="5dp"
                android:text="This is my First ever Video I have seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/layout1"
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="170dp">


            <LinearLayout
                android:layout_marginEnd="5dp"
                android:id="@+id/subLayout1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/fourth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:tint="#46000000"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:id="@+id/video2"
                            />

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_play_circle_filled_black_24dp"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/title2"
                    android:textSize="14sp"
                    android:textColor="?attr/textColor"
                    android:layout_marginTop="5dp"
                    android:text="This is my First"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:id="@+id/subLayout2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/fourth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:tint="#46000000"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:id="@+id/video3"
                            />

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_play_circle_filled_black_24dp"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/title3"
                    android:textSize="14sp"
                    android:textColor="?attr/textColor"
                    android:layout_marginTop="5dp"
                    android:text="This is my First"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>