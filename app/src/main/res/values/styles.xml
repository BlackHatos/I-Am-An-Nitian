<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--  overflow menu background color -->
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/white</item>


        <!-- Dark Mode style  -->

        <item name="backgroundColor">#fcfcfc</item>
        <item name="cardBackground">#ffffff</item>
        <item name="textColor">#808080</item>
        <item name="tintColor">#ffffff</item>
        <item name="buttonColor">#2196f3</item>

    </style>


    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="backgroundColor">#303030</item>
        <item name="cardBackground">#424242</item>
        <item name="textColor">#808080</item>
        <item name="tintColor">#ffffff</item>
        <item name="buttonColor">#ff0000</item>
    </style>


    <!-- ===============    Hiding toolbar only   ================= -->
    <style name="HideToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ===============    Hiding toolbar and status bar   ================= -->
    <style name="HideAppBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ===============   navigation drawer horizontal line color   ================= -->
    <style name="NavigationViewHorizontalLineColor">
        <item name="android:listDivider">@color/navigationHorizontalLineColor</item>
        <item name="android:textColorSecondary">@color/navigationHorizontalLineColor</item>
    </style>

    <!-- ===============  bottom  navigation view  horizontal text Size control  ================= -->
    <style name="BottomNavigationViewTextControl" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>


   </resources>
